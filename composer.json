{
    "name": "kuxitech/open-ai",
    "description": "OpenAI GPT-3 Api Client in PHP",
    "keywords": [
        "kuxitech",
        "open-ai"
    ],
    "homepage": "https://github.com/orhanerday/open-ai",
    "license": "MIT",
    "authors": [
        {
            "name": "Orhan Erday",
            "email": "orhanerday@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Kuxi Tech",
            "email": "admin@kuxi.tech",
            "role": "Improver"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.3|^7.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Orhanerday\\OpenAi\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orhanerday\\OpenAi\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
